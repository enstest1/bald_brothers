    <script>
        // Load current poll
        fetch('/polls/open')
            .then(r => r.json())
            .then(data => {
                const pollDiv = document.getElementById('current-poll');
                if (data.poll) {
                    pollDiv.innerHTML = `
                        <h2>Current Poll</h2>
